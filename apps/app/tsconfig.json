{
  "extends": "@slowco/config/tsconfig.core.json",
  "include": ["./src", "./@types", "./stories"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
		"lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
		"baseUrl": ".",
		"paths": {
			"components/*": ["src/components/*"],
			"elements/*": ["src/elements/*"],
			"pages/*": ["src/pages/*"],
			"providers/*": ["src/providers/*"],
			"stores/*": ["src/stores/*"],
			"utils/*": ["src/utils/*"],
			"types/*": ["src/types/*"],
		}
  }
}
